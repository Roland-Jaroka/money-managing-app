<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard"
    android:background="#3EC6FF">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Balance Card View -->
            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/transparent">

            <!-- Balance Card: Content -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_ammont_card">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/balance"
                    android:textColor="#3EC6FF"
                    android:textStyle="bold"
                    android:textSize="30sp" />

                <!-- Balance Card: balance and currency -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/numberView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />


                    <TextView
                        android:id="@+id/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EUR"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginLeft="8sp" />

                </LinearLayout>
       </LinearLayout>

        </androidx.cardview.widget.CardView>

            <!-- Update balance Card View -->
            <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updateBalance"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:textColor="#3EC6FF"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />


    <!-- Amount Edit Text -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/amountInput"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="#F0F4F9"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amountID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number">


        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>
    <!-- Name Edit Text -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/nameInput"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="#F0F4F9"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>
    <!-- Type Edit Text -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/typeInput"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="#F0F4F9"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/typeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/addButton"
            android:layout_marginTop="1dp"
            android:background="@drawable/button"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/MinusButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/minusButton"
        android:layout_marginTop="1dp"
        android:background="@drawable/button"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textStyle="bold">

    </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>



</LinearLayout>

</androidx.cardview.widget.CardView>

            <!-- Salary Card View -->
           <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipToOutline="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/salaryInMonth"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#3EC6FF"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="20dp" />


    </LinearLayout>

        <TextView
            android:id="@+id/currentSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif-medium" />



    </LinearLayout>



</androidx.cardview.widget.CardView>

            <!-- Savings Card View -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/savingGoalThisMonth"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#3EC6FF"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp" />


                    <TextView
                        android:id="@+id/savingOfThisMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:layout_gravity="right"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:layout_marginRight="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="10dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dailySpending"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#3EC6FF"
                        android:fontFamily="sans-serif-medium"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/spendableView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:layout_gravity="right"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:layout_marginRight="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="5dp"

                        />


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <!-- Day counter Card View -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/salaryDateExp"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#3EC6FF"
                        android:fontFamily="sans-serif-medium"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/salaryDateView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"
                        android:padding="5dp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remainingDays"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#3EC6FF"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="10dp"> </TextView>

                    <TextView
                        android:id="@+id/remainingDaysView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"
                        android:padding="10dp" />





                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp" />

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>