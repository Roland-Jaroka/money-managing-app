<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:state_pressed="true">
    <shape
        android:shape="rectangle">
        <solid
            android:color="#207ffa">
        </solid>
        <corners
            android:radius="24dp"></corners>
    </shape>

</item>
    <item>
        <shape
            android:shape="rectangle">

            <gradient
                android:angle="0"
                android:startColor="#3EC6FF"
                android:endColor="#6E9FFF"
                android:type="linear">
            </gradient>

            <corners
                android:radius="24dp"></corners>
        </shape>
    </item>

</selector>